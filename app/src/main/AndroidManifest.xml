<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jewelzqiu.sjtubbs" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".main.BBSApplication"
        android:configChanges="orientation|screenSize"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".page.PageActivity"
            android:label="@string/title_activity_page" />
        <activity
            android:name=".sections.BoardActivity"
            android:label="@string/title_activity_board" />
        <activity
            android:name=".page.PicActivity"
            android:label="@string/title_activity_pic"
            android:theme="@style/PicBrowserTheme" />
        <activity
            android:name=".page.PostPageActivity"
            android:label="@string/title_activity_post_page" >
        </activity>
    </application>

</manifest>
